
@{
    ViewBag.Title = "Index";
}

@section styles{
    <style>
        h2 {
            text-align: center;
            padding-bottom: 20px;
        }

        .body-content {
            padding-top: 50px;
            padding-bottom: 50px;
        }
    </style>
}
@section scripts{
    <script>
        $(document).ready(function () {

            $("#picture").kendoUpload({
                async: {
                    saveUrl: "save",
                    removeUrl: "remove"
                },
                validation: {
                    allowedExtensions: [".pdf"]
                }
            });
        });
    </script>
}


<h2>UPLOAD YOUR STORY</h2>
<div class="row">
    <div class="col-xs-offset-2 col-xs-8">
        <ul class="nav nav-pills nav-justified">
            <li class="active"><a data-toggle="pill" href="#pictureTab">PICTURE</a></li>
            <li><a data-toggle="pill" href="#videoTab">VIDEO</a></li>
            <li><a data-toggle="pill" href="#audioTab">AUDIO</a></li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="tab-content col-xs-offset-2 col-xs-8">
        <div id="pictureTab" class="tab-pane fade in active">
            <form class="form-horizontal">
                <div class="form-group form-inline">
                    <label class="control-label col-xs-offset-2 col-xs-2" for="picture">請選擇圖片檔案</label>
                    <div class="col-sm-6">
                        <div id="picture" />
                        @*<input type="file" class="form-control" id="picture" name="picture"/>*@
                    </div>
                    @*<div class="col-xs-8">

                        </div>*@
                </div>
            </form>
        </div>
        <div id="videoTab" class="tab-pane fade">
            <h3>Menu 1</h3>
            <p>Some content in menu 1.</p>
        </div>
        <div id="audioTab" class="tab-pane fade">
            <h3>Menu 2</h3>
            <p>Some content in menu 2.</p>
        </div>
    </div>
</div>